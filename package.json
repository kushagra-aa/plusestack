{
    "name": "pulsestack",
    "version": "1.0.0",
    "private": true,
    "description": "PulseStack - Real-time notification infrastructure system",
    "scripts": {
        "dev": "turbo run dev",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "db:generate": "pnpm --filter @pulsestack/db db:generate",
        "db:migrate": "pnpm --filter @pulsestack/db db:migrate",
        "db:seed": "pnpm --filter @pulsestack/db db:seed",
        "test:script": "pnpm --filter @pulsestack/api test:script"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "eslint": "^8.56.0",
        "prettier": "^3.2.4",
        "turbo": "^1.12.4",
        "typescript": "^5.3.3"
    },
    "packageManager": "pnpm@8.15.1",
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    }
}